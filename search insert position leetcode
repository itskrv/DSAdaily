class Solution {
public:
    int searchInsert(vector<int>& arr, int k) { 
        
          int start=0, end=arr.size()-1,ans=arr.size(), mid;

          while(start<=end){

           mid=start+(end-start)/2;

           if(arr[mid]==k) return mid;
           
           else if(arr[mid]<k) start = mid+1;
           
           else{
           ans = mid;
            end = mid-1;
           }

       }
        return ans;
        
    }
};
